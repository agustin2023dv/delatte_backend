{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@modules/*": ["src/modules/*"],
        "@configs/*": ["src/configs/*"]
      },
      "target": "ES2022",
      "module": "CommonJS",
      "rootDir": "./src",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  